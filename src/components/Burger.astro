---
const { pathname } = Astro.url;
const page = '/' + pathname.split('/').at(2);
console.log('page', page);
---

<div class="burger-container">
  <input type="checkbox" />
  <div class="menu-container">
    <menu id="menu">
      <li><a href="/astro-blog-dev-portfolio/">Home</a></li>
      <li><a href="/astro-blog-dev-portfolio/chi_sono">Chi sono</a></li>
      <li><a href="/astro-blog-dev-portfolio/portfolio">Portfolio</a></li>
      <li><a href="/astro-blog-dev-portfolio/blog">Blog</a></li>
      <li><a href="/astro-blog-dev-portfolio/contattami">Contattami</a></li>
    </menu>
  </div>
  <div class="burger">
    <div class="line-middle"></div>
  </div>
</div>

<script define:vars={{ page }}>
  const entries = document.querySelectorAll('#menu li');
  const hrefs = Array.from(entries).map(
    (entry) => '/' + entry.children[0].href.split('/').at(-1)
  );
  hrefs.forEach((href) => {
    if (page === href) {
      const index = hrefs.findIndex((href) => href === page);
      entries[index].classList.add('active');
    }
  });
</script>

<style>
  .menu-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100svw;
    height: 100svh;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #333;
    color: #fff;
    transform: scale(0);
    opacity: 0;
    z-index: 100;
    transition: 0.4s;

    menu {
      display: flex;
      flex-direction: column;
      justify-content: center;
      list-style: none;
      gap: 2rem;
      font-size: 1.7rem;

      li {
        padding: 0 10px;
        a {
          color: inherit;
          text-decoration: none;
        }

        &.active {
          border-bottom: 2px solid #fff;
        }
      }
    }
  }
  .burger-container {
    --line-height: 2px;
    --height: 30px;
    --width: 30px;
    --size: 15px;
    position: fixed;
    top: var(--size);
    right: var(--size);
    width: var(--width);
    height: var(--height);
    display: flex;
    flex-direction: column;
    justify-content: center;
    cursor: pointer;
    z-index: 100;
    background-color: #ffffffcc;
    border-radius: 50%;

    .burger {
      background-color: inherit;
      border-radius: inherit;
    }

    & input[type='checkbox'] {
      position: absolute;
      width: 100%;
      height: 100%;
      left: 50%;
      transform: translateX(-50%);
      opacity: 0;
      z-index: 110;
    }

    & .burger {
      .line-middle {
        height: var(--line-height);
        margin: 0 3px;
        background-color: #333;
        transition: 0.3s;
      }

      &::before,
      &::after {
        content: '';
        position: absolute;
        left: 6px;
        right: 6px;
        height: var(--line-height);
        background-color: #333;
      }
      &::before {
        top: 6px;
      }
      &::after {
        bottom: 6px;
      }
    }

    & input:checked ~ .burger {
      height: var(--height);
      z-index: 101;
    }

    & input:checked ~ .burger > .line-middle {
      opacity: 0;
      height: var(--height);
    }
    & input:checked ~ .burger::before {
      animation: toggleBefore 0.6s forwards ease-out;
    }
    & input:checked ~ .burger::after {
      animation: toggleAfter 0.6s forwards ease-in-out;
    }

    & input:checked + .menu-container {
      opacity: 0.9;
      transform: scale(1);
    }
  }
  @keyframes toggleBefore {
    50% {
      top: 50%;
      transform: translateY(-50%);
    }

    100% {
      top: 50%;
      transform: translateY(-50%) rotate(135deg);
    }
  }
  @keyframes toggleAfter {
    50% {
      bottom: 50%;
      transform: translateY(50%);
    }

    100% {
      bottom: 50%;
      transform: translateY(50%) rotate(-135deg);
    }
  }
</style>
