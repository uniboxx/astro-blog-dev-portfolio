<style>
  .menu-container {
    position: fixed;
    top: 50px;
    bottom: 50px;
    left: 0;
    width: 100svw;
    height: calc(100svh -50px);
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #333;
    color: #fff;
    transform: scale(0);
    opacity: 0;
    z-index: 50;
    transition: 0.4s;

    menu {
      display: flex;
      flex-direction: column;
      justify-content: center;
      list-style: none;
      gap: 2rem;

      li {
        a {
          color: inherit;
          text-decoration: none;
        }
      }
    }
  }
  .burger-container {
    --line-height: 2px;
    --height: 18px;
    --size: 15px;
    position: fixed;
    top: var(--size);
    right: var(--size);
    width: 24px;
    height: var(--height);
    display: flex;
    flex-direction: column;
    justify-content: center;
    cursor: pointer;
    z-index: 100;

    & input[type='checkbox'] {
      position: absolute;
      width: 100%;
      height: 100%;
      left: 50%;
      transform: translateX(-50%);
      opacity: 0;
      z-index: 110;
    }

    & .burger {
      .line-middle {
        height: var(--line-height);
        background-color: #333;
        transition: 0.3s;
      }

      &::before,
      &::after {
        content: '';
        position: absolute;
        left: 0;
        width: 100%;
        height: var(--line-height);
        background-color: #333;
      }
      &::before {
        top: 0;
      }
      &::after {
        bottom: 0;
      }
    }

    & input:checked ~ .burger {
      height: var(--height);
      z-index: 101;
    }

    & input:checked ~ .burger > .line-middle {
      opacity: 0;
      height: var(--height);
    }
    & input:checked ~ .burger::before {
      animation: toggleBefore 0.6s forwards ease-out;
    }
    & input:checked ~ .burger::after {
      animation: toggleAfter 0.6s forwards ease-in-out;
    }

    & input:checked + .menu-container {
      opacity: 0.9;
      transform: scale(1);
    }
  }
  @keyframes toggleBefore {
    50% {
      top: 50%;
      transform: translateY(-50%);
    }

    100% {
      top: 50%;
      transform: translateY(-50%) rotate(135deg);
    }
  }
  @keyframes toggleAfter {
    50% {
      bottom: 50%;
      transform: translateY(50%);
    }

    100% {
      bottom: 50%;
      transform: translateY(50%) rotate(-135deg);
    }
  }
</style>
