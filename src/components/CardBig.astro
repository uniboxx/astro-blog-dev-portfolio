---
import { Image } from 'astro:assets';

interface Props {
  image: ImageMetadata;
  title: string;
  tags: string;
}

const { image, title, tags }: Props = Astro.props;

const tagsArray = tags.split(',');
---

<div class="card-container">
  <Image src={image} alt="placeholder1" />
  <div class="content">
    <div class="description">
      <h3>{title}</h3>
      <ul class="tags">
        {
          tagsArray.map((tag) => {
            return <li>[{tag}]</li>;
          })
        }
      </ul>
    </div>
    <a href="#">&rarr;</a>
  </div>
</div>

<style>
  .card-container {
    img {
      width: 100%;
      height: 80%;
      object-fit: cover;
      border-radius: 5px;
    }

    .content {
      padding-top: 8px;
      display: flex;
      justify-content: space-between;
      align-items: center;

      a {
        border: 1px solid #333;
        border-radius: 5px;
        padding: 5px 10px;
      }
    }
    ul {
      display: flex;
      gap: 10px;
      list-style: none;

      li {
        font-size: 0.7rem;
        color: #666;
      }
    }
  }
  .card-container:not(:last-of-type) {
    margin-bottom: 32px;
  }
</style>
